<% layout('/layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campground" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input class="form-control" type="text" id="name" name="campground[title]">
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" name="campground[location]">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image Url</label>
                    <input type="text" class="form-control" name="campground[image]">
                </div>
                <div class="input-group">
                    <div class="input-group-text">$</div>
                    <input type="text" name="campground[price]" class="form-control" id="autoSizingInputGroup"
                        placeholder="Price" min="0">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" class="form-control" name="campground[description]" row="2"
                        col="6"></textarea>
                </div>

                <button class="btn btn-primary mb-3">Submit</button>
            </form>
            <a href="/campground">Back to home</a>
        </div>
    </div>