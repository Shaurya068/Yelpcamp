<% layout('/layouts/boilerplate') %>

<style>
  /* Keep the map full width and fixed height */
  #map {
    width: 100%;
    height: 500px;
    border-radius: 8px;
    margin-bottom: 2rem;
    box-shadow: 0 0 10px rgba(0,0,0,0.5);
  }

  h1 {
    color: #ffcc00;
    text-align: center;
    margin: 2rem 0;
  }

  .card {
    background-color: rgba(0,0,0,0.5);
    color: #fff;
    border: none;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(255,204,0,0.2);
  }

  .card img {
    border-top-left-radius: 8px;
    border-bottom-left-radius: 8px;
    object-fit: cover;
    height: 100%;
    max-height: 250px;
    width: 100%;
  }

  .card-body {
    padding: 1rem 1.5rem;
  }

  .card-title {
    color: #ffcc00;
    font-weight: 700;
  }

  .card-text {
    color: #ddd;
  }

  .btn-primary {
    background-color: #ffcc00;
    border: none;
    color: #000;
    font-weight: 600;
    transition: background-color 0.3s;
  }

  .btn-primary:hover {
    background-color: #e6b800;
    color: #000;
  }

  a.new-campground-btn {
    display: inline-block;
    margin: 2rem auto;
    padding: 0.75rem 1.5rem;
    background-color: #ffcc00;
    color: #000;
    font-weight: 700;
    border-radius: 6px;
    text-decoration: none;
    transition: background-color 0.3s;
  }

  a.new-campground-btn:hover {
    background-color: #e6b800;
    color: #000;
  }
</style>

<div id="map"></div>

<h1>All Campgrounds</h1>

<div class="container">
  <% for(let campground of campgrounds) { %>
  <div class="card mb-4 shadow-sm">
    <div class="row g-0 align-items-center">
      <div class="col-md-4">
        <% if (campground.images.length) { %>
          <img src="<%= campground.images[0].url %>" alt="<%= campground.title %>" class="img-fluid" />
        <% } else { %>
          <img src="/images/default-campground.jpg" alt="Default Campground" class="img-fluid" />
        <% } %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= campground.title %></h5>
          <p class="card-text"><%= campground.description %></p>
          <p class="card-text"><small class="text-muted"><%= campground.location %></small></p>
          <a href="/campground/<%= campground._id %>" class="btn btn-primary">View <%= campground.title %></a>
        </div>
      </div>
    </div>
  </div>
  <% } %>
</div>

<div class="text-center">
  <a href="/campground/new" class="new-campground-btn">New Campground</a>
</div>

<script>const mapToken = '<%- process.env.MAPTILER_API_KEY %>'</script>
<script>
  const campgrounds = {
    features: <%- JSON.stringify(campgrounds) %>
  };
</script>

<script src="javascriptes/clusterMap.js"></script>
