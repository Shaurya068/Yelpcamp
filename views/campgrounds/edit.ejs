<% layout('/layouts/boilerplate')%>
    <div class="row">
        <div class="col-6 offset-3">
            <h1 class="text-center mt-3 mb-5">Edit the information</h1>
            <form action="/campground/<%=camp.id%>?_method=PUT" method="post" novalidate class="validated-form">
                <div class="mb-3">
                    <label for="name" class="form-label">Edit the name</label>
                    <input type="text" id="name" name="campground[title]" value="<%=camp.title%>" class="form-control"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Edit the location</label>
                    <input type="text" name="campground[location]" class="form-control mb-3" value="<%=camp.location%>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Edit the image</label>
                    <input type="text" name="campground[image]" id="image" class="form-control" value="<%=camp.image%>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="input-group">
                    <div class="input-group-text mb-3">$</div>
                    <input type="text" name="campground[price]" class="form-control mb-3" id="autoSizingInputGroup"
                        placeholder="Price" value="<%=camp.price%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" class="form-control" name="campground[description]"
                        required><%=camp.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button class="btn btn-primary mb-3">Submit</button>
            </form>
            <a href="/campground/<%=camp._id%>">Back to campgrounds</a>
        </div>
    </div>
    <script>
        (() => {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            const forms = document.querySelectorAll('.validated-form')

            // Loop over them and prevent submission
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>