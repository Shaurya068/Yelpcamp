<% layout('/layouts/boilerplate')%>
    <div class="row">
        <div class="col-6 offset-3">
            <h1 class="text-center mt-3 mb-5">Edit the information</h1>
            <form action="/campground/<%=camp._id%>?_method=PUT" method="post" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="name" class="form-label">Edit the name</label>
                    <input type="text" id="name" name="campground[title]" value="<%=camp.title%>" class="form-control"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Edit the location</label>
                    <input type="text" name="campground[location]" class="form-control mb-3" value="<%=camp.location%>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <% camp.images.forEach(function(img, i) { %>
                        <img src="<%= img.thumbnail %>" alt="Recipe Image <%= i+1 %>"
                            class="d-block w-100 img-thumbnail">
                        <div class="form-check-inline"><input type="checkbox" id="image<%=i%>" name="deleteImages[]"
                                value="<%=img.filename%>"></div>
                        <label for="image<%=i%>">Delete This</label>
                        <% }) %>
                </div>

                <div class="input-group">
                    <div class="input-group-text mb-3">$</div>
                    <input type="text" name="campground[price]" class="form-control mb-3" id="autoSizingInputGroup"
                        placeholder="Price" value="<%=camp.price%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" class="form-control" name="campground[description]"
                        required><%=camp.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button class="btn btn-primary mb-3">Submit</button>
            </form>
            <a href="/campground/<%=camp._id%>">Back to campgrounds</a>
        </div>
    </div>